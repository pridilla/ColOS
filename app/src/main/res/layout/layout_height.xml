<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="54.5dp"
        android:layout_height="54.5dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_pop_up_chassis_levels_arrows_up"
        android:id="@+id/goUp" />

    <ImageView
        android:id="@+id/goDown"
        android:layout_width="54.5dp"
        android:layout_height="54.5dp"
        android:src="@drawable/ic_pop_up_chassis_levels_arrows_down"
        android:layout_alignTop="@+id/goUp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/goUp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#333c48"
        android:text="BOOST"

        android:layout_alignTop="@+id/goUp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/goUp"
        android:id="@+id/BOOST"
        />

    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/height_switch"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/BOOST"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="62dp"
        android:layout_toEndOf="@+id/BOOST"
        android:src="@drawable/popoff" />

</RelativeLayout>